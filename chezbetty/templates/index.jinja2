{% extends "base.jinja2" %}
{% block title %}Home{% endblock %}


{% block top %}{% endblock %}

{% block content %}

<div class="jumbotron top">
  <h1>Welcome to Chez Betty!</h1>
  <p>This is a 24/7 food store for all Graduate Students in CSE.</p>
</div>


<div id="index-main" class="col-md-12">
        <h2>Swipe your M-Card to login</h2>

</div>

<div id="front-buttons" class="col-md-12 buttons">
  <a class="btn btn-default btn-huge" href="/items">Item List</a>
  <a class="btn btn-default btn-huge" href="/about">About</a>

  {% if request.has_permission("manage") %}
  <a class="btn btn-default btn-huge" href="/admin">Administration</a>
  {% endif %}
</div>

{% endblock %}

{% block onload %}
<script src="{{'chezbetty:static/js/chezbetty-mcard.js'|static_url}}"></script>
{% endblock %}
