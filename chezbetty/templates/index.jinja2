{% extends "base.jinja2" %}
{% block title %}Home{% endblock %}


{% block top %}{% endblock %}

{% block content %}

<div class="jumbotron top">
  <h1>Welcome to Chez Betty!</h1>
  <p>This is a 24/7 food store for all members of the CSE community.</p>
</div>


<div id="index-main" class="col-md-12">
  <h2>Swipe your M-Card to login</h2>
</div>

<div id="spinner-box"></div>

<div id="front-buttons" class="col-md-12 buttons">
  <a class="btn btn-default btn-huge btn-bordered" href="/items">Item List</a>
  <a class="btn btn-default btn-huge btn-bordered" href="/about">About</a>
  <a class="btn btn-default btn-huge btn-bordered" href="/shame">Wall of Shame</a>

  {% if request.has_permission("manage") %}
  <a class="btn btn-default btn-huge btn-bordered" href="/admin">Administration</a>
  {% endif %}
</div>

{% if demo and request.has_permission("admin") %}
<div id="front-demo" class="col-md-12 buttons">
  <div class="well">
    <h3>Demo Mode:</h3>
    {% for admin in admins %}
    <a class="btn btn-default btn-huge btn-bordered" href="/purchase/{{ admin.umid }}">Login as {{ admin.name }}</a>
    {% endfor %}
  </div>
</div>
{% endif %}

{% endblock %}

{% block onload %}
<script src="{{'chezbetty:static/js/chezbetty-mcard.js'|static_url}}"></script>
{% endblock %}
