{% extends "base.jinja2" %}
{% block title %}Deposit Complete{% endblock %}
{% block header %}Deposit Complete{% endblock %}

{% block alerts %}
<div class="alert alert-success" role="alert">
  Success! The deposit was added successfully.
</div>
{% endblock %}

{% block content %}

{{ user_info_block|safe }}

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Deposit Result</h3>
  </div>
  <div class="panel-body">

    <div id="transaction-{{ deposit['transaction_id'] }}">

      <dl class="dl-horizontal">
        <dt>Old Balance</dt>
        <dd>{{ deposit['prev']|format_currency|safe }}</dd>

        <dt>Deposit</dt>
        <dd>{{ deposit['amount']|format_currency|safe }}</dd>

        <dt>New Balance</dt>
        <dd>{{ deposit['new']|format_currency|safe }}</dd>
      </dl>

    </div>

  </div>
</div>


<a class="btn btn-danger" href="/transaction/undo/{{ deposit['umid'] }}/{{ deposit['transaction_id'] }}">Oops! I made a mistake. Undo this transaction.</a>

{% endblock %}
