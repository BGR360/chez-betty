{% extends "base.jinja2" %}
{% block title %}Purchase{% endblock %}


{% block top %}
<div class="container">
  <h1>Purchase</h1>
</div>
{% endblock %}


{% block content %}

{{ purchase_info_block }}

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Order</h3>
  </div>
  <div class="panel-body">

    <table class="table table-bordered" id="purchase_table">
      <thead>
        <tr>
          <th>&nbsp;</th>
          <th>Item</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>

      <tbody>
        <tr id="purchase-empty">
          <td colspan="4">
            Order Empty
          </td>
        </tr>
      </tbody>

      <tfoot>
        <tr>
          <td colspan="3"><b>Total</b></td>
          <td id="purchase-total">0.00</td>
        </tr>
      </tfoot>
    </table>

    <div class="btn-group btn-group-large">
      <button type="button" id="btn-submit-purchase" class="btn btn-success">Submit Purchase</button>
    </div>

  </div>
</div>

{% endblock %}

{% block onload %}
<script src="{{'chezbetty:static/js/chezbetty-item.js'|static_url}}"></script>
{% endblock %}
