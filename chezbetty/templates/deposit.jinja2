{% extends "base.jinja2" %}
{% block title %}Deposit{% endblock %}
{% block header %}Deposit{% endblock %}


{% block content %}

{{ user_info_block|safe }}

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Deposit</h3>
  </div>
  <div class="panel-body">

    <div class="row">
      <div class="col-md-6">
        {{ keypad|safe }}
      </div>

      <div class="col-md-6">
        {{ btc|safe }}
      </div>
    </div>

      <div class="col-md-6">
        <div class="col-md-4">
            <button type="button" id="btn-submit-deposit" class="btn btn-success btn-full-width">Submit Deposit</button>
        </div>
      </div>

  </div>
</div>

{% endblock %}
