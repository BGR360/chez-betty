{% extends "base.jinja2" %}
{% block title %}Deposit{% endblock %}
{% block header %}Deposit{% endblock %}


{% block content %}

{% set page = 'deposit' %}
{% include "user_info.jinja2" %}

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Deposit</h3>
  </div>
  <div class="panel-body">

    <div class="row">
      <div class="col-md-4 deposit-type-col">
        <div class="row">
          <div class="col-md-12">
            <p>Please enter the amount you placed in the box here.</p>
            {% include "keypad.jinja2" %}
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <button type="button" id="btn-submit-deposit" class="btn btn-success btn-lg btn-full-width">Submit Deposit</button>
          </div>
        </div>
      </div>

      <div class="col-md-4 deposit-type-col">
        {{ btc|safe }}
      </div>
    </div>

  </div>
</div>

{% endblock %}
