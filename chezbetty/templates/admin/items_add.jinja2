{% extends "base.jinja2" %}
{% set active_page = active_page|default('items_add') %}
{% block title %}Add New Items{% endblock %}

{% block top %}
<h1 class="page-header">Add New Items</h1>
{% endblock %}

{% set post_url = post_url|default("/admin/items/add/submit") %}
{% block content %}

<form role="form" action="{{ post_url }}" method="post">

<input type="hidden" id="item-count" name="item-count" value="{{ d['item_count'] }}">

<table class="table" id="newitems">
  <thead>
    <tr>
      <th>New Item</th>
    </tr>
  </thead>
  <tbody id="newitem-rows">
    {% for i in range(0, d['item_count']|int) %}
    <tr id="item-{{ i }}">
      <td>
        <table class="table new-item-table" id="item-{{ i }}-new">
          <tbody>
            <tr>
              <td class="box-category-text">Item Name</td>
              <td class="box-example-text">Autogenerated</td>
              <td><input type="text" class="form-control box-name-text" id="box-item-{{ i }}-name" name="item-{{ i }}-name" value="{{ d['item-'~i~'-name'] }}"></td>
            </tr>
            <tr>
              <td>General Name</td>
              <td class="box-example-text">Ex: Coke Diet</td>
              <td><input type="text" class="form-control" id="box-item-{{ i }}-general" name="item-{{ i }}-general" value="{{ d['item-'~i~'-general'] }}"></td>
            </tr>
            <tr>
              <td>Volume</td>
              <td class="box-example-text">Ex: 12oz</td>
              <td><input type="text" class="form-control" id="box-item-{{ i }}-volume" name="item-{{ i }}-volume" value="{{ d['item-'~i~'-volume'] }}"></td>
            </tr>
            <tr>
              <td>Barcode</td>
              <td></td>
              <td><input type="text" class="form-control barcode-check" id="box-item-{{ i }}-barcode" name="item-{{ i }}-barcode" value="{{ d['item-'~i~'-barcode'] }}"></td>
            </tr>
            <tr>
              <td>Sales Tax</td>
              <td></td>
              <td>
                <input type="hidden" name="item-{{ i }}-salestax" value="off">
                <input type="checkbox" id="box-item-{{ i }}-salestax" name="item-{{ i }}-salestax" {% if d['item-'~i~'-salestax'] == "True" %}checked="checked"{% endif %}>
              </td>
            </tr>
            <tr>
              <td>Bottle Deposit</td>
              <td></td>
              <td>
                <input type="hidden" name="item-{{ i }}-bottledep" value="off">
                <input type="checkbox" id="box-item-{{ i }}-bottledep" name="item-{{ i }}-bottledep" {% if d['item-'~i~'-bottledep'] == "True" %}checked="checked"{% endif %}>
              </td>
            </tr>
          </tbody>
        </table>

      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>

<button type="button" class="btn btn-info" id="new-item">Add New Item</button>

<button type="submit" class="btn btn-success">Add Items</button>

</form>

{% endblock %}

{% block onload %}
<script src="{{'chezbetty:static/js/chezbetty-admin-noenter.js'|static_url}}"></script>
<script src="{{'chezbetty:static/js/chezbetty-admin-keyboard.js'|static_url}}"></script>
{% endblock %}