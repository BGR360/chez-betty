{% extends "base.jinja2" %}
{% set active_page = 'vendors_edit' %}
{% block title %}Edit Vendors{% endblock %}

{% block top %}
<h1 class="page-header">Edit Vendors</h1>
{% endblock %}


{% block content %}

<form role="form" action="/admin/vendors/edit/submit" method="post" id="form-edit-vendors">

  <div id="edit-vendors">

    <table class="table">

      <thead>
        <tr>
          <th>Name</th>
          <th>Enable</th>
        </tr>
      </thead>

      <tbody>

        {% for vendor in vendors %}
        <tr id="vendor-{{ vendor.id }}" class="edit-vendor-row {% if vendor.enabled == False %} disabled-row {% endif %}">
          <td>
            <input type="text" class="form-control" id="vendor-enable-{{ vendor.id }}" name="vendor-name-{{ vendor.id }}" value="{{ vendor.name }}">
          </td>
          <td>
            <input type="checkbox" id="admin-vendor-enable-{{ vendor.id }}" class="admin-switch toggle-disabled" {% if vendor.enabled == True %}checked="checked"{% endif %}>
          </td>
        </tr>
        {% endfor %}

        <tr>
          <td><input type="text" class="form-control" id="vendor-name-new" name="vendor-name-new"></td>
          <td></td>
        </tr>

      </tbody>

    </table>

    <button type="submit" class="btn btn-success">Update Vendors</button>

  </div>

</form>

{% endblock %}

{% block onload %}
<script src="{{'chezbetty:static/js/chezbetty-admin-keyboard.js'|static_url}}"></script>
{% endblock %}
