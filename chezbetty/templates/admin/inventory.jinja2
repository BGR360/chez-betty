{% extends "base.jinja2" %}
{% set active_page = 'inventory' %}
{% block title %}Inventory{% endblock %}

{% block top %}
<h1 class="page-header">Inventory</h1>
{% endblock %}


{% block content %}

<form role="form" action="/admin/inventory/submit" method="post">

  <table class="table">
    <thead>
      <tr class="item-list-header">
        <th>Name</th>
        <th>In Stock</th>
        <th>New Count</th>
      </tr>
    </thead>

    <tbody>
      {% for item in items %}
      <tr id="item-{{ item.id }}">
        <td>{{ item.name }}</td>
        <td>{{ item.in_stock }}</td>
        <td><input type="text" class="form-control" id="item-newstock-{{ item.id }}" name="item-newstock-{{ item.id }}" value=""></td>
      </tr>
      {% endfor %}
    </tbody>

  </table>

  <button type="submit" class="btn btn-success">Process Inventory</button>

</form>

{% endblock %}
