{% extends "base.jinja2" %}
{% block title %}{{ _('Wall of Shame') }}{% endblock %}
{% block header %}{{ _('Wall of Shame') }}{% endblock %}

{% block content %}

<p class="lead">{{ _('These users owe Chez Betty more than $5.') }}</p>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">{{ _('Users in Debt') }}</h3>
  </div>
  <div class="panel-body">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>{{ _('Name') }}</th>
          <th style="width: 30%">{{ _('uniqname') }}</th>
          <th style="width: 30%">{{ _('Account Balance') }}</th>
        </tr>
      </thead>

      <tbody>
      {% for user in users %}
        <tr>
          <td>{{ user.name }}</td>
          <td>{{ user.uniqname }}</td>
          <td>{{ user.balance|format_currency|safe }}</td>
        </tr>
      {% endfor %}
      </tbody>

    </table>
  </div>
</div>

{% endblock %}
