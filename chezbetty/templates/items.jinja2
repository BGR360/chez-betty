{% extends "base.jinja2" %}
{% block title %}Items{% endblock %}


{% block top %}
<div class="container">
  <h1>Items at Chez Betty</h1>
</div>
{% endblock %}


{% block content %}


<a class="btn btn-default" href="/">Home</a>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Items</h3>
  </div>
  <div class="panel-body">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Item</th>
          <th class="item-stock">In Stock</th>
          <th class="item-price">Price</th>
          <th class="item-cost">Wholesale Cost</th>
        </tr>
      </thead>

      <tbody>
      {% for item in items %}
        <tr>
          <td class="item-name">{{ item.name }}</td>
          <td class="item-stock">{{ item.in_stock }}</td>
          <td class="item-price">{{ item.price|format_currency }}</td>
          <td class="item-cost">{{ item.wholesale|format_currency }}</td>
        </tr>
      {% endfor %}
      </tbody>

    </table>
  </div>
</div>

{% endblock %}
